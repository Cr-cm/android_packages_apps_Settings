<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:title="@string/crdroid_settings">

    <PreferenceCategory
        android:key="crdroid_status"
        android:title="@string/crdroid_custom_settings_header">

	<!-- Notification drawer behaviour -->
        <ListPreference
            android:key="notification_drawer_collapse_on_dismiss"
            android:title="@string/notification_drawer_collapse_on_dismiss_title"
            android:dialogTitle="@string/notification_drawer_collapse_on_dismiss_title"
            android:entries="@array/notification_drawer_collapse_on_dismiss_entries"
            android:entryValues="@array/notification_drawer_collapse_on_dismiss_values" /> 

	<!-- Notification drawer background -->
	<Preference
            android:fragment="com.android.settings.cyanogenmod.NotificationDrawerStyle"
            android:key="notification_style"
            android:title="@string/notification_style_title"
            android:summary="@string/notification_style_summary" /> 

        <!-- Notification drawer behaviour -->
        <ListPreference
            android:key="notifications_behaviour"
            android:title="@string/notification_behaviour_title"
            android:entries="@array/notifs_beh_entries"
            android:entryValues="@array/notifs_beh_values" />

	<!-- No Notifications pulldown --> 
	<ListPreference 
            android:key="no_notifications_pulldown"
            android:title="@string/title_no_notifications_pulldown"
            android:entries="@array/no_notifications_pulldown_entries"
            android:entryValues="@array/no_notifications_pulldown_values"
            android:persistent="false" /> 

	<!-- One click flip tile -->
	<CheckBoxPreference
            android:key="flip_qs_tiles"
            android:title="@string/flip_qs_tiles_title"
            android:summary="@string/flip_qs_tiles_summary" /> 

	<!-- Low battery pop-up warning -->
	<ListPreference
           android:key="pref_low_battery_warning_policy"
           android:title="@string/pref_low_battery_warning_policy_title"
           android:dialogTitle="@string/pref_low_battery_warning_policy_dialog_title"
           android:entries="@array/pref_low_battery_warning_policy_entries"
           android:entryValues="@array/pref_low_battery_warning_policy_values"
           android:defaultValue="0" />  
 
        <!-- Traffic meter -->
        <PreferenceScreen
            android:key="traffic_cat"
            android:title="@string/traffic_cat">
                <CheckBoxPreference
                    android:key="status_bar_traffic_enable"
                    android:title="@string/enable_network_speed"
                    android:summary="@string/enable_network_speed_summary"
                    android:defaultValue="false" />

                <CheckBoxPreference
                    android:key="status_bar_traffic_hide"
                    android:title="@string/hide_network_speed"
                    android:summary="@string/hide_network_speed_summary"
                    android:dependency="status_bar_traffic_enable"
                    android:defaultValue="true" />

                <ListPreference
                    android:key="status_bar_traffic_summary"
                    android:dialogTitle="@string/network_speed_summary"
                    android:title="@string/network_speed_summary"
                    android:entries="@array/network_speed_summary_entries"
                    android:entryValues="@array/network_speed_summary_values" />

                <net.margaritov.preference.colorpicker.ColorPickerPreference
                    android:key="network_speed_color"
                    android:title="@string/network_speed_color_style"
                    android:defaultValue="#33b5e5" />
        </PreferenceScreen> 
        
	<!-- Naviagtion ring shortcuts -->
        <PreferenceScreen
            android:key="navigation_ring"
            android:fragment="com.android.settings.crdroid.NavRing"
            android:title="@string/navigation_ring_title" />

	<!-- Media scanner behavior on boot -->
	<ListPreference
           android:key="media_scanner_on_boot"
           android:title="@string/media_scanner_on_boot_title"
           android:persistent="true"
           android:entries="@array/media_scanner_on_boot_entries"
           android:entryValues="@array/media_scanner_on_boot_values" />  

	<!-- Recents RAM bar -->
	<PreferenceScreen
           android:key="recents_ram_bar"
           android:fragment="com.android.settings.crdroid.RamBar"
           android:title="@string/ram_bar" />

	<!-- Less notification sound -->
	<ListPreference
            android:key="less_notification_sounds"
            android:title="@string/less_notification_sounds_title"
            android:summary="@string/less_notification_sounds_summary"
            android:entries="@array/less_notification_sounds_entries"
            android:entryValues="@array/less_notification_sounds_values" />  

	<!-- Custom carrier label -->
	<PreferenceScreen
            android:key="custom_carrier_label"
            android:title="@string/custom_carrier_label_title" />

	<!-- Wifi name on drawer -->
	<CheckBoxPreference
            android:key="notification_show_wifi_ssid"
            android:title="@string/notification_show_wifi_ssid_title"
            android:summary="@string/notification_show_wifi_ssid_summary"
            android:defaultValue="false" />

	<!-- Quick peek -->
	<CheckBoxPreference
            android:key="status_bar_quick_peek"
            android:title="@string/statusbar_quick_peek_title"
            android:summary="@string/statusbar_quick_peek_summary"
            android:defaultValue="false" />

	<!-- Alternate App picker -->
	<CheckBoxPreference
            android:key="use_alt_resolver"
            android:title="@string/alt_resolver"
            android:summary="@string/alt_resolver_summary"
            android:defaultValue="false" />

	<!-- Notifications lights with screen on -->
	<CheckBoxPreference
            android:key="screen_on_notification_led"
            android:title="@string/screen_on_notification_led_title"
            android:summary="@string/screen_on_notification_led_summary"
            android:defaultValue="true" />  

	<!-- Wake on plugged or unplugged -->
	<CheckBoxPreference
            android:key="wakeup_when_plugged_unplugged"
            android:title="@string/wakeup_when_plugged_unplugged_title"
            android:summary="@string/wakeup_when_plugged_unplugged_summary"
            android:defaultValue="true" /> 

	<!-- Navigation bar kill app long press back -->
	<CheckBoxPreference
            android:key="kill_app_longpress_back"
            android:title="@string/kill_app_longpress_back"
            android:summary="@string/kill_app_longpress_back_summary"/> 

    </PreferenceCategory>

</PreferenceScreen>
